# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Ignore paths
[*.{min.js, min.css, min.map, *.ipynb}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

[{.do/**, .sass-cache/**, .git/**}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js, py, html, htm}]
charset = utf-8

# 4 space indentation
[*.{py, js, css}]
indent_style = space
indent_size = 4

[*.{html, htm}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Indentation override for all JS under lib directory
[**/lib/**.js]
indent_style = space
indent_size = 2

[**/lib/**.css]
indent_style = space
indent_size = 4

# Matches the exact files either package.json or .travis.yml
[{package.json, .travis.yml}]
indent_style = space
indent_size = 2
